<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:focusable="true">

    <TextView
        android:id="@+id/textview_stopinfo_flightnumber"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:background="@drawable/route_shapeoval"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textview_stopinfo_directionname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@+id/textview_stopinfo_flightnumber"
        android:layout_toEndOf="@+id/textview_stopinfo_flightnumber"
        android:layout_toLeftOf="@id/view_stopinfo_verticalline"
        android:layout_toStartOf="@id/view_stopinfo_verticalline" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_alignParentBottom="true"
        android:background="#E0E0E0" />

    <View
        android:id="@+id/view_stopinfo_verticalline"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:background="@color/gray"
        android:layout_alignParentEnd="true" />

</RelativeLayout>